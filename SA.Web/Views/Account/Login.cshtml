@model SA.Data.Dto.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
       
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Login </div>
                <div class="card-body">
                    @Html.ValidationSummary()
                    <form asp-action="Login" asp-controller="Account" method="post">

                        <div class="form-group row">
                            <div class="col-md-3"> 
                                <img style="width:50px;" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSsVDHYfVhbk6hqIV8XZeMZkowfoCZ9oF2Eug&usqp=CAU"/>
                                </div>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>

                        <div class="form-group row">
                             <div class="col-md-3"></div>
                            <div class="col-md-9">
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                           
                        </div>

                        <div class="col-md-12 offset-md-4">
                            <button type="submit" class="btn btn-primary">Login</button>
                            <a asp-action="Register" asp-controller="account">Don't Have Account ? Register</a>

                        </div>
                    </form>
                    
                </div>
                        

        </div>
    </div>
</div>
    </div>