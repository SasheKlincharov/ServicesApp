
@using SA.Data.Entity
@model List<SA.Data.Entity.Product>

@{
    ViewData["Title"] = "View";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{

    <div class="container">

        @**<div class="m-3">
            <a class="btn btn-success" asp-controller="Product" asp-action="Create">Add new Product</a>
            </div>
            **@
         <div class="m-3">
            <a class="btn btn-success" href="/Product/Create">Add new Product</a>
        </div>


        <div>
            Choose Product:
        </div>



        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];

            if (i % 3 == 0)
            {
                @:<div class="row">
            }


                <div class="col-md-3 m-4">
                    <div class="card" style="width: 18rem; height: 30rem;">
                        <img class="card-img-top" src="@item.Image" style="height: 50%" alt="Image for product!" />

                        <div class="card-body">
                            <h3 class="card-title">@item.Name</h3>


                            <h6>Price:   <span>@item.Price</span></h6>
                        </div>

                        <div class="card-footer">


                             <div class="m-3">
                                <a class="btn btn-danger" href="/Product/Delete?id=@item.Id">Delete</a>
                                <a class="btn btn-danger" href="/Product/Edit?id=@item.Id">Edit</a>

                             </div>
                        </div>
                    </div>
                </div>



            if (i % 3 == 2)
            {
                @:</div>
            }
        }
    </div>
}
