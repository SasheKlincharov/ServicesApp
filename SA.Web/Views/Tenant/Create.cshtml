@model SA.Data.Dto.CreateTenantDto
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";

    var allUsers = Model.Users;
}


@using(Html.BeginForm("Create", "Tenant", FormMethod.Post))
{
  
    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.Name)
        @Html.TextBoxFor(model => model.Tenant.Name)
    </div>

    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.Address)
        @Html.TextBoxFor(model => model.Tenant.Address)
    </div>

    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.Description)
        @Html.TextBoxFor(model => model.Tenant.Description)
    </div>

    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.Color)
        @Html.TextBoxFor(model => model.Tenant.Color)
    </div>

    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.Email)
        @Html.TextBoxFor(model => model.Tenant.Email)
    </div>

    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.LogoURL)
        @Html.TextBoxFor(model => model.Tenant.LogoURL)
    </div>

    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.PhoneNumber)
        @Html.TextBoxFor(model => model.Tenant.PhoneNumber)
    </div>

    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.Latitude)
        @Html.TextBoxFor(model => model.Tenant.Latitude)
    </div>

    <div class="text-form">
        @Html.LabelFor(model => model.Tenant.Longitude)
        @Html.TextBoxFor(model => model.Tenant.Longitude)
    </div>

    <div class="text-from">
        @Html.LabelFor(model => model.Tenant.OwnerId)
        @Html.DropDownListFor(model => model.Tenant.OwnerId,allUsers)
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
}