
@using SA.Data.Entity
@model List<SA.Data.Entity.Tenant>

@{
    ViewData["Title"] = "View";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{
    
    <div class="container">

    @**<div class="m-3">
        <a class="btn btn-success" asp-controller="Tenant" asp-action="Create">Add new Product</a>
    </div>
    **@
     <div class="m-3">
        <a class="btn btn-success" href="/Tenant/Create">Add new Tenant</a>
    </div>


    <div>
        Choose tenant:
    </div>



    @for (int i = 0; i < Model.Count; i++)
     {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }


        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 30rem;">
                <img class="card-img-top" src="@item.LogoURL" style="height: 50%" alt="Image for product!" />

                <div class="card-body">
                    <h3 class="card-title">@item.Name</h3>
                    <p class="card-text">@item.Description</p>

                    <h6>Price:</h6>
                </div>

                <div class="card-footer">

                    <a asp-controller="Tenant" asp-action="getDetails" asp-route-id="@item.Id" class="btn btn-info">Details for @item.Name</a>
                    @**<a asp-controller="Products" asp-action="Edit" asp-route-p="@item.Id" class="btn btn-secondary">Edit</a>
                    **@
                </div>
            </div>
        </div>



        if (i % 3 == 2)
        {
            @:</div>
        }
    }
    </div>
}

